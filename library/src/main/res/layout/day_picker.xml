<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme">


    <io.flyingmongoose.etzioDayPicker.ToggleFab
        android:id="@+id/fabMonday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@color/white"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fabTuesday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_m"
        app:toggleActiveColor="@color/joustBlue"
        app:toggleInactiveColor="@color/white"
        app:toggleActiveIcon="@drawable/ic_m_white"
        app:toggleInactiveIcon="@drawable/ic_m" />

    <io.flyingmongoose.etzioDayPicker.ToggleFab
        android:id="@+id/fabTuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@color/white"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fabWednesday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fabMonday"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_t"
        app:toggleActiveColor="@color/joustBlue"
        app:toggleInactiveColor="@color/white"
        app:toggleActiveIcon="@drawable/ic_t_white"
        app:toggleInactiveIcon="@drawable/ic_t" />

    <io.flyingmongoose.etzioDayPicker.ToggleFab
        android:id="@+id/fabWednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@color/white"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fabThursday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fabTuesday"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_w"
        app:toggleActiveColor="@color/joustBlue"
        app:toggleInactiveColor="@color/white"
        app:toggleActiveIcon="@drawable/ic_w_white"
        app:toggleInactiveIcon="@drawable/ic_w" />

    <io.flyingmongoose.etzioDayPicker.ToggleFab
        android:id="@+id/fabThursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@color/white"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fabFriday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fabWednesday"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_t"
        app:toggleActiveColor="@color/joustBlue"
        app:toggleInactiveColor="@color/white"
        app:toggleActiveIcon="@drawable/ic_t_white"
        app:toggleInactiveIcon="@drawable/ic_t" />

    <io.flyingmongoose.etzioDayPicker.ToggleFab
        android:id="@+id/fabFriday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="@color/white"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fabSaterday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fabThursday"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_f"
        app:toggleActiveColor="@color/joustBlue"
        app:toggleInactiveColor="@color/white"
        app:toggleActiveIcon="@drawable/ic_f_white"
        app:toggleInactiveIcon="@drawable/ic_f" />

    <io.flyingmongoose.etzioDayPicker.ToggleFab
        android:id="@+id/fabSaterday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fabSunday"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fabFriday"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_s"
        app:toggleActiveColor="@color/joustBlue"
        app:toggleActiveIcon="@drawable/ic_s_white"
        app:toggleInactiveColor="@color/white"
        app:toggleInactiveIcon="@drawable/ic_s" />

    <io.flyingmongoose.etzioDayPicker.ToggleFab
        android:id="@+id/fabSunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone"
        app:backgroundTint="@color/white"
        app:fabSize="mini"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fabSaterday"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_s"
        app:toggleActiveColor="@color/joustBlue"
        app:toggleActiveIcon="@drawable/ic_s_white"
        app:toggleInactiveColor="@color/white"
        app:toggleInactiveIcon="@drawable/ic_s" />

</androidx.constraintlayout.widget.ConstraintLayout>